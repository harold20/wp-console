{% if not admin_file_exists and class_name_sidebar_path is defined %}

/**
 * Custom sidebar to display in theme
 */
function add_custom_sidebar()
{
    // Include the files for rendering the display.
    include_once( get_template_directory() . '/{{ class_name_sidebar_path }}');
}
add_custom_sidebar();
{% endif %}

{% if class_name_quicktag_path is defined %}

/**
 * Custom quicktag to display in theme
 */
function add_theme_custom_quicktag()
{
    // Include the files for rendering the display.
    include_once( get_template_directory() . '/{{ class_name_quicktag_path }}');
}
add_theme_custom_quicktag();
{% endif %}
{% if not admin_file_exists and admin_registers_path is defined %}

/**
 * This function render all register {{ type }} that are in admin/partials/register-{{ type }}-admin.php
 */
function add_theme_customs_register_{{ type }}s()
{
    // Include the files for rendering the display.
    include_once( get_template_directory() . '/{{ admin_registers_path }}');
}
add_theme_customs_register_{{ type }}s();

{% endif %}